<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <import type="android.view.View"/>
        <variable name="editLogModel" type="org.gmautostop.hitchlog.EditLogOldViewModel"/>
    </data>
    <LinearLayout android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/LogItemHeader"
                android:text=""/>

        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:text="@={editLogModel.name}"
                />
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <Button android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@android:string/ok"
                    android:onClick="@{() -> editLogModel.saveLogAndGoBack()}"
                    />
            <Button android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/delete"
                    android:visibility="@{editLogModel.id.empty ? View.GONE : View.VISIBLE}"
                    android:onClick="@{() -> editLogModel.deleteLogAndGoBack()}"
                    />
        </LinearLayout>

    </LinearLayout>

</layout>