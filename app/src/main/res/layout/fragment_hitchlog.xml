<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="org.gmautostop.hitchlog.HitchLogRecordType"/>
        <variable name="viewModel" type="org.gmautostop.hitchlog.HitchLogViewModel"/>
    </data>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".HitchLogFragment">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{viewModel.log.raceId}"
        />

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/log"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                app:itemBinding="@{viewModel.recordBinding}"
                app:items="@{viewModel.records()}"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        />

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:itemBinding="@{viewModel.buttonBinding}"
                app:items="@{viewModel.recordTypes}"
                app:layoutManager=".util.ButtonLayoutManager"
        />
    </LinearLayout>
</layout>
